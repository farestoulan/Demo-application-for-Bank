<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/boss"
    tools:context=".presentation.screens.home.AdminHomeFragment">

    <TextView
        android:id="@+id/title_HomeAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="213dp"
        android:text="Welcome Admin"
        android:textSize="25sp"
        android:gravity="center"
        android:fontFamily="sans-serif-black"
        android:backgroundTint="#63ABCD"
        android:background="@drawable/btn_top"
        app:layout_constraintBottom_toTopOf="@+id/cardViewBoss"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewBoss"
        android:layout_width="393dp"
        android:layout_height="296dp"
        android:background="@drawable/btn_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_HomeAdmin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_top"
            android:backgroundTint="#83C1BB">


            <Button
                android:id="@+id/btn_AddingBranch"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_GetEmailAdmin"
                android:layout_alignParentStart="true"
                android:layout_marginStart="13dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_top"
                android:fontFamily="sans-serif-black"
                android:text="Add Branch"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_AddRoles"
                android:layout_width="181dp"
                android:layout_height="51dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="122dp"
                android:background="@drawable/btn_top"
                android:fontFamily="sans-serif-black"
                android:text="Add Roles"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_AddDepartment"
                android:layout_width="251dp"
                android:layout_height="59dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="83dp"
                android:background="@drawable/btn_top"
                android:fontFamily="sans-serif-black"
                android:text="Add Department" />

            <Button
                android:id="@+id/btn_GetPasswordAdmin"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_GetEmailAdmin"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/btn_top"
                android:fontFamily="sans-serif-black"
                android:text="Get Password"
                android:textSize="16sp">

            </Button>

            <Button
                android:id="@+id/btn_GetEmailAdmin"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_AddDepartment"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/btn_top"
                android:fontFamily="sans-serif-black"
                android:text="Get Email"
                android:textSize="16sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>