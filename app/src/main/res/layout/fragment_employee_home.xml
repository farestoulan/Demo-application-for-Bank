<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50"
    tools:context=".home.EmployeeHome">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="369dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="This Employee"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101" />

    <Button
        android:id="@+id/btn_DepositAccess"
        android:layout_width="198dp"
        android:layout_height="72dp"
        android:layout_marginTop="56dp"
        android:fontFamily="sans-serif-black"
        android:text="Deposit Access"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/btn_WithdrawAccess"
        android:layout_width="210dp"
        android:layout_height="80dp"
        android:layout_marginBottom="288dp"
        android:fontFamily="sans-serif-black"
        android:text="Withdraw Access"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_DepositAccess"
        app:layout_constraintVertical_bias="0.63" />

    <Button
        android:id="@+id/btn_history"
        android:layout_width="176dp"
        android:layout_height="66dp"
        android:fontFamily="sans-serif-black"
        android:text="History"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_WithdrawAccess"
        app:layout_constraintVertical_bias="0.295" />

</androidx.constraintlayout.widget.ConstraintLayout>