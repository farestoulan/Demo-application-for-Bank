<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/boss"
    tools:context=".presentation.screens.home.ManagerHomeFragment">

    <TextView
        android:id="@+id/title_HomeBoss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn_top"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:backgroundTint="#63ABCD"
        android:text="welcome Boss"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewBoss"
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/btn_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_HomeBoss">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_top"
            android:backgroundTint="#83C1BB">


            <Button
                android:id="@+id/btn"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_GetEmailBoss"
                android:layout_alignStart="@+id/btn_GetEmailBoss"
                android:layout_alignEnd="@+id/btn_GetEmailBoss"
                android:layout_marginStart="7dp"
                android:layout_marginTop="43dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/btn_top"
                android:fontFamily="sans-serif-black"
                android:text=""
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_StartBoss"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="48dp"
                android:background="@drawable/btn_top"
                android:fontFamily="sans-serif-black"
                android:text="Start Adding"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_GetEmailBoss"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="49dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/btn_top"
                android:fontFamily="sans-serif-black"
                android:text="Get Email"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_GetPasswordBoss"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_StartBoss"
                android:layout_alignParentStart="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="44dp"
                android:background="@drawable/btn_top"
                android:fontFamily="sans-serif-black"
                android:text="Get Password"
                android:textSize="16sp">

            </Button>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>